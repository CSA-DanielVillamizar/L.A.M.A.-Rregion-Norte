<%- include('../partials/header') %>

    <style>
        .epic-carousel {
            overflow: hidden;
            position: relative;
        }

        .epic-track {
            display: flex;
            gap: 1rem;
            width: max-content;
            animation: epicScroll 28s linear infinite;
        }

        .epic-carousel:hover .epic-track {
            animation-play-state: paused;
        }

        @keyframes epicScroll {
            from {
                transform: translateX(0);
            }

            to {
                transform: translateX(-50%);
            }
        }
    </style>

    <div class="container mx-auto px-4 py-16">
        <div class="max-w-4xl mx-auto">
            <a href="/eventos"
                class="inline-flex items-center text-lamaNeon hover:text-lamaGold transition-colors mb-8">
                ← Volver a eventos
            </a>

            <div class="bg-lamaDark rounded-lg p-4 md:p-8 border border-gray-800 shadow-xl mb-8">
                <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-6">
                    <div>
                        <h1 class="text-3xl md:text-6xl font-headings text-lamaGold tracking-wider mb-2 break-words">
                            <%= event.nombre %>
                        </h1>
                        <p class="text-lamaNeon text-lg">Lugar: <%= event.ubicacion %>
                        </p>
                    </div>
                    <% if (event.destacado) { %>
                        <div class="bg-lamaGold text-lamaBlack px-4 py-2 rounded font-bold text-sm">DESTACADO</div>
                        <% } %>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                    <div class="bg-lamaBlack p-4 rounded border border-gray-800">
                        <div class="text-3xl font-headings text-lamaNeon neon-text mb-2">
                            <%= event.fecha.split('-')[2] %>-<%= event.fechaFin.split('-')[2] %>
                        </div>
                        <p class="text-xs text-gray-400">
                            <%= new Date(event.fecha + 'T12:00:00' ).toLocaleDateString('es-CO', { month: 'long' ,
                                year: 'numeric' }) %>
                        </p>
                    </div>
                    <div class="bg-lamaBlack p-4 rounded border border-gray-800">
                        <div class="text-3xl font-headings text-lamaGold mb-2">
                            <% if (event.paqueteOficial) { %>
                                $<%= event.paqueteOficial.valor.toLocaleString('es-CO') %>
                                    <% } else { %>
                                        <%= event.precio==null ? 'POR DEFINIR' : (event.moneda==='USD' ?
                                            ('USD ' + event.precio) : (' $' + event.precio.toLocaleString('es-CO'))) %>
                                            <% } %>
                        </div>
                        <p class="text-xs text-gray-400">INVERSIÓN <%= event.moneda || 'COP' %>
                        </p>
                    </div>
                    <div class="bg-lamaBlack p-4 rounded border border-gray-800">
                        <div
                            class="text-3xl font-headings <%= event.disponibilidad < 20 ? 'text-red-500' : 'text-lamaNeon' %> mb-2">
                            <%= event.disponibilidad %>
                        </div>
                        <p class="text-xs text-gray-400">CUPOS DISPONIBLES</p>
                    </div>
                </div>
            </div>

            <div class="bg-lamaDark rounded-lg p-8 border-l-4 border-lamaNeon shadow-xl mb-8">
