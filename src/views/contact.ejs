<%- include('partials/header') %>

<div class="container mx-auto px-4 py-16">
    <div class="max-w-3xl mx-auto">
        
        <div class="text-center mb-12 animate-fade-in-up">
            <h1 class="text-5xl md:text-7xl font-headings text-lamaGold tracking-widest mb-4">CONTACTO</h1>
            <p class="text-xl text-lamaBone">Estamos aquí para responder tus preguntas</p>
        </div>

        <!-- Messages -->
        <% if (success) { %>
        <div class="bg-green-900/30 border border-green-500 text-green-200 p-6 rounded-lg mb-8 text-center">
            <p class="text-xl font-bold mb-2">MENSAJE ENVIADO</p>
            <p>Gracias por contactarnos. Responderemos pronto.</p>
        </div>
        <% } %>

        <% if (error) { %>
        <div class="bg-red-900/30 border border-red-500 text-red-200 p-6 rounded-lg mb-8 text-center">
            <p class="text-xl font-bold mb-2">ERROR</p>
            <p><%= error %></p>
        </div>
        <% } %>

        <!-- Contact Form -->
        <div class="bg-lamaDark rounded-lg p-8 border border-gray-800 shadow-xl mb-12">
            <form method="POST" action="/contacto" class="space-y-6">
                <div>
                    <label class="block text-lamaBone font-bold mb-2">Nombre Completo *</label>
                    <input type="text" name="nombre" required 
                           class="w-full bg-lamaBlack border border-gray-700 rounded px-4 py-3 text-lamaBone focus:border-lamaNeon focus:outline-none">
                </div>

                <div>
                    <label class="block text-lamaBone font-bold mb-2">Email *</label>
                    <input type="email" name="email" required 
                           class="w-full bg-lamaBlack border border-gray-700 rounded px-4 py-3 text-lamaBone focus:border-lamaNeon focus:outline-none">
                </div>

                <div>
                    <label class="block text-lamaBone font-bold mb-2">Mensaje *</label>
                    <textarea name="mensaje" required rows="6"
                              class="w-full bg-lamaBlack border border-gray-700 rounded px-4 py-3 text-lamaBone focus:border-lamaNeon focus:outline-none resize-none"></textarea>
                </div>

                <button type="submit" 
                        class="w-full bg-lamaGold text-lamaBlack font-bold py-4 rounded-lg hover:bg-lamaNeon hover:scale-105 transition-all text-lg">
                    ENVIAR MENSAJE
                </button>
            </form>
        </div>

        <!-- Contact Info -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <div class="bg-lamaDark p-6 rounded-lg border border-gray-800">
                <div class="text-lamaNeon mb-3 flex justify-center">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <p class="text-lamaBone font-bold mb-1">Email</p>
                <p class="text-sm text-gray-400 break-all">comiteregionnortelamacolombia@gmail.com</p>
            </div>
            <div class="bg-lamaDark p-6 rounded-lg border border-gray-800">
                <div class="text-lamaNeon mb-3 flex justify-center">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                </div>
                <p class="text-lamaBone font-bold mb-1">Teléfono</p>
                <p class="text-sm text-gray-400">+57 3106328171</p>
            </div>
            <div class="bg-lamaDark p-6 rounded-lg border border-gray-800">
                <div class="text-lamaNeon mb-3 flex justify-center">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
                <p class="text-lamaBone font-bold mb-1">Oficina</p>
                <p class="text-sm text-gray-400">Medellín, Colombia</p>
            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') %>
